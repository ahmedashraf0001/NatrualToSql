{
  "testSettings": {
    "timeoutMinutes": 5,
    "maxRetries": 3,
    "parallelExecution": true
  },
  "connectionStrings": {
    "testDatabase": "Data Source=:memory:",
    "integrationDatabase": "Server=(localdb)\\MSSQLLocalDB;Database=NaturalToSqlTests;Integrated Security=true;"
  },
  "testCategories": {
    "unit": {
      "description": "Fast, isolated unit tests with mocked dependencies",
      "patterns": ["*Tests.cs", "!*IntegrationTests.cs"]
    },
    "integration": {
      "description": "Integration tests that test component interactions",
      "patterns": ["*IntegrationTests.cs"]
    },
    "e2e": {
      "description": "End-to-end tests requiring external dependencies",
      "patterns": ["*E2ETests.cs"]
    }
  },
  "mockConfiguration": {
    "llmService": {
      "defaultResponse": {
        "sql": "SELECT * FROM Users",
        "explanation": "Test query generated by mock service"
      }
    },
    "databaseProvider": {
      "simulateConnectionFailure": false,
      "simulateQueryTimeout": false
    }
  }
}